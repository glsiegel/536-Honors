package data;

public class IdentifierInfo {
	public static final String[] KINDS = {
			"enum", // global vars
			"parameter", // parameters in the function defn (was parameter
			"parameter", // when parameters are used in the function ( was parameter)
			"variable", // none of the above ( was variable)
			"function"
	};
	public static final String[] MODIFIERS = {
	};
	
    public final String name;
    public final int kindIdx;
    public final int startLine;
    public final int startChar;
    public final int length;

    public IdentifierInfo(String name, int kindIdx, int startLine, int startChar, int length) {
        this.name = name;
        this.kindIdx = kindIdx;
        this.startLine = startLine;
        this.startChar = startChar;
        this.length = length;
    }
    
    @Override
    public String toString() {
    		return String.format("%s (%d) line %d offset %d kind %s", name, length, startLine, startChar, KINDS[kindIdx]);
    }
}