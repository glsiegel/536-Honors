{
  "name": "badlang",
  "displayName": "Badlang",
  "description": "Syntax highlighter, error checker, and interpreter for Badlang.",
  "version": "0.0.1",
  "publisher": "luke-siegel",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:badlang"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "badlang",
        "aliases": ["BadLang", "Badlang", "badlang"],
        "extensions": [".bl"]
      }
    ],
    "grammars":[
      {
        "language": "badlang",
        "scopeName": "source.badlang",
        "path": "./syntaxes/badlang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "badlang.run",
        "title": "Run this file",
        "category": "BadLang",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "badlang.run",
          "group":"navigation",
          "when":"resourceLangId == badlang"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
