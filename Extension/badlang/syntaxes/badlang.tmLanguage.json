{
    "scopeName": "source.badlang",
    "patterns": [
        {"include":"#keywords"},
        {"include":"#numbers"},
        {"include":"#truths"},
        {"include":"#comments"},
        {"include":"#operators"},
        {"include":"#types"},
        {"include":"#function"}

    ],
    "repository":{
        "keywords":{
            "patterns": [
                {
                    "name": "keyword.control.badlang",
                    "match": "\\b(if|else|while|return|print|import|as)\\b"
                }                

            ]
        },
        "numbers":{
            "patterns": [
                {
                    "name": "constant.numeric.badlang",
                    "match": "\\b[0-9]+\\b"
                }                

            ]
        },
        "truths":{
            "patterns": [
                {
                    "name": "constant.language.badlang",
                    "match": "\\b(true|false)\\b"
                }                

            ]
        },
        "comments":{
            "patterns": [
                {
                    "name": "comment.line.badlang",
                    "match": "//.*$"
                }                

            ]
        },
        "operators":{
            "patterns": [
                {
                    "name": "keyword.operator.badlang",
                    "match": "(==|!=|<|<=|>|>=|\\+|-|\\*|/)"
                }                

            ]
        },
        "types":{
            "patterns": [
                {
                    "name": "storage.type.badlang",
                    "match": "\\b(int|bool|fun)\\b"
                }                

            ]
        }
    }
}